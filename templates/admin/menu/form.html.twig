{% extends 'base.html.twig' %}

{% block title %}Menus - Administration{% endblock %}

{% block container %}
    <h1>
        {% if menu.title == '' %}
            Ajouter un menu
        {% else %}
            Modifier le menu "{{ menu.title }}"
        {% endif %}
    </h1>
    {{ form_start(form) }}
        {{ form_row(form.translations)}}
    <div class="card">
        <div class="card-body">
            {{ form_rest(form) }}
        </div>
        <div class="card-footer text-center">
            <button class="btn btn-primary">
                <i class="fas fa-save"></i> Enregistrer
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}