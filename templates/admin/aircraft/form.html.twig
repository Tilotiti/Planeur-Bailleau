{% extends 'base.html.twig' %}

{% block title %}Machines - Administration{% endblock %}

{% block container %}
    <h1>
        {% if aircraft.competitionNumber == '' %}
            Ajouter une machine
        {% else %}
            Modifier la machine "{{ aircraft.competitionNumber }}"
        {% endif %}
    </h1>
    {{ form_start(form) }}
    <div class="card">
        <div class="card-body">
            {{ form_rest(form) }}
        </div>
        <div class="card-footer text-center">
            <button class="btn btn-primary">
                <i class="fas fa-save"></i> Enregistrer
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}